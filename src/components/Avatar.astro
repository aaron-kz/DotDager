---
import { Image } from "astro:assets";
import headshot from "../assets/Dot-Dager.jpeg";
---

<div class="relative flex items-center gap-x-4">
    <Image
        src={headshot}
        densities={[1, 2, 3]}
        alt="Developers's headshot"
        class="h-12 w-12"
    />

    <div class="text-lg leading-6">
        <h1 class="font-semibold text-primary text-xl dark:text-white">
            <span class="absolute inset-0"></span>
            Dot Dager
        </h1>
        <!-- Typer.js -->
        <p>
            <span
                class="typer text-lg"
                id="main"
                data-words="Full-Stack Senior,YouTuber,Contador serial de chistes malos"
                data-delay="50"
                data-deleteDelay="1000"
                data-colors="#a1a1aa"></span>

            <span class="cursor" data-owner="main"></span>
        </p>

        <script is:inline src="https://unpkg.com/typer-dot-js@0.1.0/typer.js"
        ></script>
    </div>
</div>
