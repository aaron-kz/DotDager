---
import { Image } from "astro:assets";

import notonto from "../assets/no-sos-tonto.jpeg";
import demasiadoprog from "../assets/demasiado-programador.jpeg";
import listo from "../assets/Estas-listo.jpeg";
import notecuentan from "../assets/lo-que-no-te-cuentan.jpeg";
import roadmaps from "../assets/roadmaps.jpeg";
import autodidacta from "../assets/autodidacta.jpeg";

const cards = [
    {
        title: "Cómo estudiar (pero bien)",
        imagealt: "Cómo estudiar (pero bien)",
        image: notonto,
        href: "https://youtu.be/YQfRVo5UwOM?si=sFs1GdZRzlYvnbT0",
    },
    {
        title: "Por qué dejé la universidad | ¿Carrera, autodidacta o bootcamps para ser programador?",
        imagealt:
            "Por qué dejé la universidad | ¿Carrera, autodidacta o bootcamps para ser programador?",
        image: autodidacta,
        href: "https://youtu.be/SoblGnOSHws?si=ORBMJBOcoY4tbtgw",
    },
    {
        title: "Deja de perder tiempo",
        imagealt: "Deja de perder tiempo",
        image: listo,
        href: "https://youtu.be/FlO796ke0AI?si=yGN_s9JIiP82oZLG",
    },
    {
        title: "Mirá esto antes de aprender a programar",
        imagealt: "Mirá esto antes de aprender a programar",
        image: notecuentan,
        href: "https://youtu.be/c2EJRboAYL4?si=rOBBzOLDgTb1gGrV",
    },
    {
        title: "No seaas tan programador",
        imagealt: "No seaas tan programador",
        image: demasiadoprog,
        href: "https://youtu.be/FMfLfYus6Yc?si=OmURVXVSYLFrvaDy",
    },
    {
        title: "5 Roadmaps para ser programador en 2024",
        imagealt: "5 Roadmaps para ser programador en 2024",
        image: roadmaps,
        href: "https://youtu.be/oGHdcLCd7Gs?si=BNuMrg3ybSZzHj9v",
    },
];
---

<div class="flex my-4 items-center justify-center">
    <div class="relative w-full overflow-hidden">
        <!-- For some reason the white vignette effect don't work in this sandbox but if you uncomment the following lines in VSCode, they should work -->

        <div class="block">
            <div
                class="pointer-events-none absolute -top-1 z-10 h-20 w-full bg-gradient-to-b from-zinc-950 to-transparent"
            >
            </div>
            <div
                class="pointer-events-none absolute -bottom-1 z-10 h-20 w-full bg-gradient-to-t from-zinc-950 to-transparent"
            >
            </div>
            <div
                class="pointer-events-none absolute -left-1 z-10 h-full w-20 bg-gradient-to-r from-zinc-950 to-transparent"
            >
            </div>
            <div
                class="pointer-events-none absolute -right-1 z-10 h-full w-20 bg-gradient-to-l from-zinc-950 to-transparent"
            >
            </div>
        </div>

        <div
            id="scroller"
            class="mx-auto grid h-[450px] w-[300px] animate-skew-scroll grid-cols-1 gap-5 sm:w-[720px] sm:grid-cols-2"
        >
            <!-- These are all the same components - if you're using React, you can use a map to iterate through all of them -->
            {
                cards.map((card) => (
                    <a
                        target="_blank"
                        href={card.href}
                        class="cursor-pointer items-center bg-zinc-900 space-x-2 p-4 shadow-md transition-all hover:-translate-y-1 hover:translate-x-1 hover:scale-[1.025] hover:shadow-xl"
                    >
                        <div class="flex-shrink-0">
                            <Image
                                loading="eager"
                                src={card.image}
                                alt={card.imagealt}
                                class="mb-4 border sm:h-[250px] sm:w-[720px] border-black"
                                densities={[0.5, 1, 3]}
                            />
                        </div>
                        <div class="flex flex-col">
                            <h3 class="font-semibold text-white">
                                {card.title}
                            </h3>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</div>
<style></style>
<script>
    //On screens lower than 640px, animation skew-scroll should translateY(-830%)
    //On screens higher than 640px, animation skew-scroll should translateY(-430%)
</script>
